{
  "name": "nextjs-tailwindcss-typescript-storybook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "tailwind-storybook": "tailwind build ./styles/tailwind.css -o ./public/storybook/tailwind.storybook.css",
    "tailwind-storybook-build": "NODE_ENV=production tailwind build ./styles/tailwind.css -o ./storybook-static/storybook/tailwind.storybook.css",
    "storybook": "npm run tailwind-storybook && start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook && npm run tailwind-storybook-build"
  },
  "dependencies": {
    "next": "^10.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@next/plugin-storybook": "^10.0.3",
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/react": "^6.1.10",
    "@types/node": "^14.14.12",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "postcss": "^8.2.1",
    "react-is": "^17.0.1",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2"
  }
}
